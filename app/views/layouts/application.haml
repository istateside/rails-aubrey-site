<!DOCTYPE html>
%html
  %head
    %title Aubrey Nolan
    = csrf_meta_tags
    <link rel="shortcut icon" href="//nebula.wsimg.com/5533e3339b273c3c8f69e3c649b3567c?AccessKeyId=012E2E7A81F6E42C11CD&amp;disposition=0&amp;alloworigin=1">
    <link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/gh/kenwheeler/slick@1.7.1/slick/slick.css"/>
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'

  %body.app{ class: "#{params[:controller]}-#{params[:action]}".gsub('/', '-').parameterize }
    -if notice or alert
      #flash
        %p.notice= notice
        %p.alert= alert
    - if signed_in?
      #admin-header
        %span= "Logged in as #{current_admin.email}"
        = link_to 'Sign Out', destroy_admin_session_path, class: 'sign-out-link', method: :delete
    %header
      .top
        %h1
          = link_to 'Aubrey Nolan', root_url
          = link_to root_url, class: 'logo' do
            = image_tag 'lady-head-small.png'
      %nav
        %span.dropdown-trigger 
          = link_to 'Work', root_url
          %ul.dropdown
            %li= link_to 'Comics', comics_url
            %li= link_to 'Illustrations', illustrations_url
            %li= link_to 'Other Projects', other_url

        = link_to 'About', about_url

    %main
      = yield

    = javascript_pack_tag 'application'
