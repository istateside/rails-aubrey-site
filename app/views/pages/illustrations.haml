%section.illustrations
  %h2 Illustrations
  %ul.work-grid
    %li.project.js-overlay-trigger{ data: { overlay_index: 1 } }
      .overlay
        %p The Rumpus - Goldhawk
      = image_tag 'aubrey-assets/illustration/Illustration__TheRumpus_Goldhawk1.jpg'

    %li.project.js-overlay-trigger{ data: { overlay_index: 2 } }
